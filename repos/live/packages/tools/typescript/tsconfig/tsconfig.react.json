// For create-react-apps.
{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "noImplicitAny": false,

    // --------------------------------------------------------------------------

    // Allows `import foo from '@src/modules/foo`.
    // NOTE: Synced with: `babel-preset-live-node-basic` + `eslint-config-live` + `tsconfig-pkg`.
    "paths": {
      // NOTE: We don't want to use multiple paths because we need our IDE to consistently set the paths during refactor.
      //"modules/*": ["modules/*"],
      // --
      "@src/*": ["*"]
    }

    // --------------------------------------------------------------------------
  }
}
